<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".MainWindowActivity">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:text=""
            android:textColor="#444444"
            android:textSize="15sp"
            android:textStyle="bold" />


        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_month"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginRight="16dp"
            android:padding="13dp"
            android:src="@mipmap/month_icon" />

        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginRight="14dp"
            android:padding="14dp"
            android:src="@mipmap/select_icon" />
    </android.support.v7.widget.LinearLayoutCompat>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">

                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/ll_11"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3.5dp"
                    android:layout_weight="1"
                    android:background="#eeeeee"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_num_11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#d7163f"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="年度"
                        android:textColor="#444444"
                        android:textSize="15sp" />

                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/ll_20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3.5dp"
                    android:layout_weight="1"
                    android:background="#eeeeee"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_num_20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#11bfdd"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="专项"
                        android:textColor="#444444"
                        android:textSize="16sp" />

                </android.support.v7.widget.LinearLayoutCompat>

            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">

                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/ll_10"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3.5dp"
                    android:layout_weight="1"
                    android:background="#eeeeee"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_num_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#d7163f"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="当月管控"
                        android:textColor="#444444"
                        android:textSize="15sp" />

                </android.support.v7.widget.LinearLayoutCompat>

            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">

                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/ll_31"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3.5dp"
                    android:layout_weight="1"
                    android:background="#eeeeee"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_num_31"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#d7163f"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="未管控"
                        android:textColor="#444444"
                        android:textSize="15sp" />

                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/ll_32"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3.5dp"
                    android:layout_weight="1"
                    android:background="#eeeeee"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_num_32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#11bfdd"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="管控中"
                        android:textColor="#444444"
                        android:textSize="16sp" />

                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/ll_33"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3.5dp"
                    android:layout_weight="1"
                    android:background="#eeeeee"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_num_33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#11bfdd"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="已结束"
                        android:textColor="#444444"
                        android:textSize="16sp" />

                </android.support.v7.widget.LinearLayoutCompat>

            </android.support.v7.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/tb_totalType"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:text="月度各矿管理统计"
                android:textColor="#444444"
                android:textSize="16sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="1"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/blue_rectangle_white_stroke_4dp_corner"
                android:elevation="@dimen/elevation_basic"
                tools:listitem="@layout/item_risk_danger_statistics_of_each_unit" />

            <TextView
                android:id="@+id/tb_style"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:text="各矿重大风险统计"
                android:textColor="#444444"
                android:textSize="16sp" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="20dp"
                android:background="#eeeeee"
                android:gravity="center"
                android:orientation="horizontal">

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/lineChartBotoom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:minHeight="160dp" />

            </android.support.v7.widget.LinearLayoutCompat>
        </android.support.v7.widget.LinearLayoutCompat>

    </ScrollView>

</android.support.v7.widget.LinearLayoutCompat>