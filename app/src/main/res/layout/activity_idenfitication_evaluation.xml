                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="left"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="@dimen/normal_ts" />


                        </android.support.v7.widget.LinearLayoutCompat>

                        <View
